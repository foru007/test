<h1>Listing posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Ride From</th>
      <th>To</th>
      <th>Way</th>
      <th>Price</th>
      <th>Post by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.from %></td>
        <td><%= post.to %></td>
        <td><%= post.way %></td>
        <td><%= post.price %></td>
        <td><%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %></td>
        
        <td><%= link_to 'Show', post %></td>

        <% if can? :update, post %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <% end %>
        <% if can? :update, post %>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if @posts.exists?%>
<%= link_to 'New Post', new_post_path %>
<%else%>
<%= link_to 'New Post', new_post_path %>

<%end%>
