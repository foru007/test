      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Full Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_name" name="profile[name]" placeholder="Name">
      </div>
    </div>
    <div class="form-group">
      <label for="birthday" class="col-sm-2 control-label">Date of Birth</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_birthday" name="profile[birthday]" placeholder="dd-mm-yyyy">
      </div>
    </div>
    <div class="form-group">
      <label for="address" class="col-sm-2 control-label">Address</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_address" name="profile[address]" placeholder="Type your address">
      </div>
    </div>
    <div class="form-group">
      <label for="sex" class="col-sm-2 control-label">Sex</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_sex" name="profile[sex]" placeholder="Male/Female/Else">
      </div>
    </div>
    <div class="form-group">
      <label for="tel" class="col-sm-2 control-label">Contact No</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_tel" name="profile[tel]" placeholder="Type your telephone number">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Save</button>
      </div>
    </div>

<% end %>
