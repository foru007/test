<%= form_for(@profile, :html => { :multipart => true }) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Full Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_name" name="profile[name]" placeholder="Name" value="<%=@profile.name%>">
      </div>
    </div>
    <div class="form-group">
      <label for="birthday" class="col-sm-2 control-label">Date of Birth</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_birthday" name="profile[birthday]" placeholder="dd-mm-yyyy" value="<%=@profile.birthday%>">
      </div>
    </div>
    <div class="form-group">
      <label for="address" class="col-sm-2 control-label">Address</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_address" name="profile[address]" placeholder="Type your address" value="<%=@profile.address%>">
      </div>
    </div>
    <div class="form-group">
      <label for="sex" class="col-sm-2 control-label">Sex</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_sex" name="profile[sex]" placeholder="Male/Female/Else" value="<%=@profile.sex%>">
      </div>
    </div>
    <div class="form-group">
      <label for="tel" class="col-sm-2 control-label">Contact No</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="profile_tel" name="profile[tel]" placeholder="Type your telephone number" value="<%=@profile.tel%>">
      </div>
    </div>
    <div class="form-group">
      <label for="photo" class="col-sm-2 control-label">File Image</label>
        <input type="file" id="profile_photo" name="profile[photo]" value="<%=@profile.photo.url%>" ">
        
    </div>

    <div style='width: 30%; float:right; float:top;'>  
      <img src=<%=@profile.photo.url%> alt="..." class="img-circle">
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Save Profile</button>
      </div>
    </div>

<% end %>
