<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  
 <div class="form-group">
    <label for="name">Email</label>
    <input type="text" id="user_name" name="user[name]" class="form-control" />
  </div>
  <div class="form-group">
    <label for="username">Email</label>
    <input type="email" id="user_email" name="user[email]" class="form-control" />
  </div>
  <div class="field">
    <label for="password">Password</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %> <br />
    <input type="password" id="user_password" name="user[password]" class="form-control" />
  </div>
  <div class="field">
    <label for="password_confirmation">Password</label>
    <input type="password" id="user_password_confirmation" name="user[password_confirmation]" class="form-control" />
  </div>  
  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
